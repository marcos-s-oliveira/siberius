// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  pin       String?  // PIN de 4-6 dígitos para tela touch
  ativo     Boolean  @default(true)
  criadoEm  DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  @@map("usuarios")
}

model Tecnico {
  id           Int      @id @default(autoincrement())
  nome         String
  email        String   @unique
  telefone     String?
  especialidade String?
  ativo        Boolean  @default(true)
  usuarioId    Int?     @unique  // ID do usuário criado para acesso mobile
  mobileToken  String?  @unique  // Token único para autenticação mobile via QR Code
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  alocacoes TecnicoAtendimento[]

  @@map("tecnicos")
}

model OrdemServico {
  id              Int      @id @default(autoincrement())
  numeroOS        String
  versao          Int      @default(1)
  nomeCliente     String
  nomeEvento      String
  data            DateTime
  dataMontagem    DateTime? // Data(s) da montagem extraída do PDF
  horarioMontagem String?   // Horário da montagem (HH:mm)
  osAtualizada    Boolean  @default(false)
  caminhoArquivo  String   @unique
  caminhoRelativo String?
  nomeArquivo     String
  fileHash        String?  // Hash MD5 do conteúdo do arquivo para detectar duplicatas
  osOriginalId    Int?     // Referência para a OS original (se for atualização)
  ativa           Boolean  @default(true) // Indica se é a versão ativa
  indexadoEm      DateTime @default(now())
  atualizadoEm    DateTime @updatedAt

  osOriginal      OrdemServico?  @relation("OSVersoes", fields: [osOriginalId], references: [id], onDelete: SetNull)
  versoes         OrdemServico[] @relation("OSVersoes")
  atendimento     Atendimento?

  @@unique([numeroOS, versao])
  @@index([numeroOS, ativa])
  @@index([fileHash])
  @@map("ordens_servico")
}

model Atendimento {
  id               Int       @id @default(autoincrement())
  ordemServicoId   Int       @unique
  dataAgendamento  DateTime
  dataFinalizacao  DateTime? // Quando foi finalizado
  status           String    @default("nao_agendado") // nao_agendado, agendado, em_andamento, concluido, cancelado
  observacoes      String?
  criadoEm         DateTime  @default(now())
  atualizadoEm     DateTime  @updatedAt

  ordemServico OrdemServico @relation(fields: [ordemServicoId], references: [id], onDelete: Cascade)
  tecnicos     TecnicoAtendimento[]

  @@map("atendimentos")
}

model TecnicoAtendimento {
  id             Int      @id @default(autoincrement())
  atendimentoId  Int
  tecnicoId      Int
  funcao         String?  // Função/especialidade no atendimento (ex: "Áudio", "Iluminação")
  criadoEm       DateTime @default(now())
  atualizadoEm   DateTime @updatedAt

  atendimento Atendimento @relation(fields: [atendimentoId], references: [id], onDelete: Cascade)
  tecnico     Tecnico     @relation(fields: [tecnicoId], references: [id])

  @@unique([atendimentoId, tecnicoId])
  @@map("tecnicos_atendimentos")
}

// Modelo antigo - será removido após migration
model AtendimentoOS {
  id              Int      @id @default(autoincrement())
  ordemServicoId  Int
  tecnicoId       Int
  dataAtribuicao  DateTime @default(now())
  status          String   @default("pendente")
  observacoes     String?
  criadoEm        DateTime @default(now())
